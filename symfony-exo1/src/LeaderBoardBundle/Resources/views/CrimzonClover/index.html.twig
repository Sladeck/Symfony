{% extends 'base.html.twig' %}

{% block title %}Crimzon Clover{% endblock %}

{% block body %}
    <h1>Crimzon Clover</h1>

    <nav class="navbar-default">
        <hr>
        <ol class="breadcrumb">
            <li><a href="/crimzon_clover/type1">Type 1</a></li>
            <li><a href="/crimzon_clover/type3">Type 3</a></li>
            <li><a href="/crimzon_clover/typeZ">Type Z</a></li>
        </ol>
        <hr>
    </nav>

    <h3>
        Type
        {% if type is defined %}
            {{ type|replace({'type': ''}) }}
        {% else %}
            Z
        {% endif %}
    </h3>
    <div class="responsive-video">
        {% if type is defined %}
            {% if type == 'type1' %}
                <iframe width="560" height="315" src="https://www.youtube.com/embed/utgHIk9Q7Xo" frameborder="0"
                        allowfullscreen></iframe>
            {% elseif type == 'type3' %}
                <iframe width="420" height="315" src="https://www.youtube.com/embed/foDTJceKio8" frameborder="0"
                        allowfullscreen></iframe>
            {% elseif type == 'typeZ' %}
                <iframe width="560" height="315" src="https://www.youtube.com/embed/ZNNQqxVOeo4" frameborder="0"
                        allowfullscreen></iframe>
            {% endif %}
        {% else %}
            <iframe width="560" height="315" src="https://www.youtube.com/embed/ZNNQqxVOeo4" frameborder="0"
                    allowfullscreen></iframe>
        {% endif %}
    </div>
{% endblock %}
